{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://anthropic.com/claude-code/marketplace.schema.json",
  "title": "Claude Code Marketplace Schema",
  "description": "Schema for Claude Code plugin marketplace configuration",
  "type": "object",
  "required": ["name", "owner", "plugins"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "description": "Marketplace identifier (kebab-case recommended)",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string",
      "description": "Marketplace version"
    },
    "description": {
      "type": "string",
      "description": "Brief marketplace description"
    },
    "owner": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Owner or maintainer name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Owner contact email"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Owner website or profile URL"
        }
      },
      "additionalProperties": false
    },
    "plugins": {
      "type": "array",
      "description": "List of plugins in this marketplace",
      "items": {
        "type": "object",
        "required": ["name", "source"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Plugin identifier (kebab-case recommended)",
            "pattern": "^[a-z0-9-]+$"
          },
          "source": {
            "type": "string",
            "description": "Plugin source location (relative path, GitHub URL, or git repository)"
          },
          "description": {
            "type": "string",
            "description": "Brief plugin description"
          },
          "version": {
            "type": "string",
            "description": "Plugin version"
          },
          "author": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            }
          },
          "homepage": {
            "type": "string",
            "format": "uri",
            "description": "Plugin homepage URL"
          },
          "repository": {
            "type": "string",
            "description": "Plugin repository URL or object"
          },
          "license": {
            "type": "string",
            "description": "Plugin license identifier"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Search keywords"
          },
          "category": {
            "type": "string",
            "description": "Plugin category"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Plugin tags"
          },
          "commands": {
            "description": "Custom command file/directory paths"
          },
          "agents": {
            "description": "Custom agent file paths"
          },
          "hooks": {
            "type": "object",
            "description": "Hooks configuration"
          },
          "mcpServers": {
            "type": "object",
            "description": "MCP server configurations"
          },
          "strict": {
            "type": "boolean",
            "description": "Whether to require plugin.json (default: true)"
          }
        },
        "additionalProperties": false
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "pluginRoot": {
          "type": "string",
          "description": "Base path for relative plugin sources"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
